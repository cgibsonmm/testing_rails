<div class="new-link">
  <%= link_to 'Submit a new link', new_link_path %>
</div>

<div class="links-list">
  <ul>
    <% @links.each do |link| %>
      <div class="row">
        <li id="link_<%= link.id %>" data-role="score">
          <div class="link_<%= link.id %>_count" data-role="score"><%= link.upvotes %></div>
          <%= link_to link.link_title, link.link_url %>
          <%= button_to "Upvote", upvote_link_url(link) %>
        </li>
      </div>
    <% end %>
  </ul>
</div>
